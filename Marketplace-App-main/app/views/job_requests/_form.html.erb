<%= form_with model: @request do |f|%>
    <%= f.hidden_field :client_id, value: @client.id %>
    <%= f.label :job_function%>
    <%= f.text_field :job_function%>
    <%= f.label :address%>
    <%= f.text_field :address%>
    <%= f.label :start_date%>
    <%= f.date_field :start_date%>
    <%= f.label :end_date%>
    <%= f.date_field :end_date%>
    <%= f.label :vacancies_count%>
    <%= f.number_field :vacancies_count%>
    <%= f.label :monthly_salary%>
    <%= f.number_field :monthly_salary%>
    <%= f.label :details%>
    <%= f.text_area :details%>
    <%= f.label "Skills Required"%>
    <%= f.collection_check_boxes :skills_array, @skills, :id, :name, include_hidden: false%>
    <%= f.submit %>
<%end%>