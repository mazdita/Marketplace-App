<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
  <%= link_to "marketplace", root_path, id: "logo" %>

  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><h3><%= link_to "Home", root_path %></h3></li>
      
      <%if admin_signed_in?%>
       <li><h3><%= link_to "Candidacies", candidacies_path%></h3></li>
       <li><h3><%= link_to "Placements", placements_path%></h3></li>
       <li><h3><%= link_to "Log out", destroy_admin_session_path, method: :delete %></h3></li>
      <%elsif worker_signed_in?%>
        <li><h3><%= link_to "Jobs", job_requests_path%></h3></li>
        <li><h3><%= link_to "My account", worker_path(current_worker)%></h3></li>
        <li><h3><%= link_to "Log out", destroy_worker_session_path, method: :delete %></h3></li>
      <%elsif client_signed_in?%>
        <li><h3><%= link_to "My Page", client_path(current_client)%></h3></li>
        <li><h3><%= link_to "Log out", destroy_client_session_path, method: :delete %></h3></li>
      <%else %> 
       <li><h3><%= link_to "Log in", new_worker_session_path%></h3></li>
      <%end %>

    </ul>
  </nav> 
</div>
</header>